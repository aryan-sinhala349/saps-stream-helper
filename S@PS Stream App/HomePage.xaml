<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SAPS.Homepage"
             Title="">
    <VerticalStackLayout Margin="20">
        <HorizontalStackLayout VerticalOptions="StartAndExpand" 
                               HorizontalOptions="StartAndExpand">
            <Image x:Name="m_ProfilePicture"
               VerticalOptions="Start"
               HorizontalOptions="Start" />
            <Label x:Name="m_WelcomeText" 
                   VerticalOptions="Center"
                   HorizontalOptions="Start"
                   FontSize="Medium"
                   Margin="20" />
        </HorizontalStackLayout>
        <Entry x:Name="m_SlugLink"
               VerticalOptions="Center"
               HorizontalOptions="Center"
               Placeholder="Tournament Slug"
               MinimumWidthRequest="400"
               Margin="20"
               Completed="OnCompleteSlugLink" />
    </VerticalStackLayout>
</ContentPage>